<div id="rating" class="col-xs-12 col-lg-10">
  <h3>Opiniones</h3>
  <% if @center.reviews.count > 0 %>
      <ul>
        <%= render @center.reviews %>
      </ul>
  <% else %>
      <p>¡Aún nadie ha elaborado ninguna reseña, sé el primero!</p>
  <% end %>
  <button class="btn btn-default" data-toggle="modal" data-target="#opinion_modal"><%= session[:username] ? "Añadir reseña" : "Inicia sesion para añadir una reseña" %></button>
  <br/>
  <br/>
</div>