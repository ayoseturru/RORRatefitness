<li>
  <%= div_for center do %>
      <h4>
        <%= link_to center.name, center %>
        <% for i in 1..center.rate.to_i do %>
            <i class="fa fa-1x fa-star hidden-xs"></i>
        <% end %>
      </h4>
      <% for i in 1..center.rate.to_i do %>
          <i class="fa fa-1x fa-star hidden-sm hidden-md hidden-lg"></i>
      <% end %>
      <div class="row">
        <%= image_tag "/center_images/#{center.main_image}", alt: "Center Image", class: "col-xs-2 center_main_image img-rounded" %>
        <p class="col-xs-8"><%= center.description %></p>
      </div>
      <p><i class="fa fa-2x fa-map-marker"></i><strong> Direccion:</strong> <%= center.address %></p>
      <p><i class="fa fa-2x fa-phone"></i> <strong> Tel√©fono</strong>: <%= center.phone %></p>
      <h4><i class="fa fa-star"></i><%= link_to " Valorar", opinions_centers_path(id: center.id) %></h4>
  <% end %>
</li>
