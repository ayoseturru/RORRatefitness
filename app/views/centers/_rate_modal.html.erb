<div class="modal fade" id="opinion_modal" role="dialog">
  <div class="modal-dialog">

    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Completa el siguiente formulario</h4>
      </div>
      <div class="modal-body">
        <%= form_for([@center, @center.reviews.new]) do %>
            <div class="form-group">
              <label for="rate_title">Título:</label>
              <input name="title" type="text" class="form-control" id="rate_title" required>
            </div>
            <div>
              <h4>Instalaciones:</h4>
              <input name="infraestructure" type="number" class="rating" data-stars="5" min=0 max=5
                     step=0.5 data-size="xs" required>
              <hr>
              <h4>Actividades:</h4>
              <input name="activities" type="number" class="rating" data-stars="5" min=0 max=5
                     step=0.5 data-size="xs" required>
              <hr>
              <h4>Monitores:</h4>
              <input name="attention" type="number" class="rating" data-stars="5" min=0 max=5 step=0.5
                     data-size="xs" required>
              <hr>
              <h4>Limpieza:</h4>
              <input name="cleaning" type="number" class="rating" data-stars="5" min=0 max=5 step=0.5
                     data-size="xs" required>
              <hr>
              <h4>Vestuarios:</h4>
              <input name="bathroom" type="number" class="rating" data-stars="5" min=0 max=5
                     step=0.5 data-size="xs" required>
              <hr>
            </div>
            <div class="form-group">
              <p><label for="opinion">Opinión:</label></p>
              <textarea name="comment" class="col-xs-10" rows="8" id="opinion" required></textarea>
            </div>
            <button type="submit" class="btn btn-default">Añadir reseña</button>
        <% end %>

      </div>
    </div>

  </div>
</div>
