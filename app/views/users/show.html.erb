<h2 id="results_title" class="col-xs-10 col-xs-offset-1"><i class="fa fa-envelope"></i> Contacta con <%= @user.name %>:
</h2>
<h4 class="col-xs-10 col-xs-offset-1"><%= @user.email %></h4>
<div id="centers_result" class="col-xs-12 col-sm-10 col-md-8 col-md-offset-2 col-lg-offset-1 col-lg-5">
  <ul>
    <% @user.adverts.each do |advert| %>
        <li>
          <h3><%= advert.title %></h3>
          <p><%= advert.description %></p>
          <h6><%= advert.date %></h6>
        </li>
    <% end %>
  </ul>
  <br><br>
</div>