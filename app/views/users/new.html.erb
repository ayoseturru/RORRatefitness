<div id="sign_up_form" class="col-xs-8 col-xs-offset-2 col-sm-5 col-lg-3 col-sm-offset-2">
  <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2> <%= pluralize(@user.errors.count, "error") %>
              prohibited this user from being saved: </h2>
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field form-group">
        <%= f.label :username, 'Nombre de usuario' %></br>
        <%= f.text_field :username, class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :name, 'Nombre' %></br>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :email, 'Email' %></br>
        <%= f.text_field :email, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password, 'Contraseña' %></br>
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation, 'Repita la contraseña' %></br>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit 'Registrarse', :class => 'btn btn-default' %>
      </div>
      <br>

  <% end %>
</div>