<div class="container-fluid">
  <div id="front">
    <br>
    <br>
    <br>

    <div class="row">
      <%= form_tag centers_path, method: "get", role: "search", class: "col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-lg-offset-4" do %>
          <div class="input-group">
            <%= text_field_tag :filter, params[:filter], class: "form-control", placeholder: "Centro deportivo, gimnasio, complejo", required: true %>
            <div class="input-group-btn">
              <%= button_tag "Buscar", class: "btn btn-default", name: "" do %>
                  <i class="glyphicon glyphicon-search"></i>
              <% end %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>

